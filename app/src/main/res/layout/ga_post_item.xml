<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:gravity="center">

    <ProgressBar
        android:id="@+id/Progress"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="?android:attr/progressBarStyle"
        android:indeterminateTint="@color/colorMain"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/ImageNothing"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/tool_nothing"/>

    <TextView
        android:id="@+id/tvPostId"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="0sp" />

    <TextView
        android:id="@+id/tvUserId"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="0sp" />

    <TextView
        android:id="@+id/tvImageId"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="0sp" />

    <TextView
        android:id="@+id/tvImageLat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="0sp" />

    <TextView
        android:id="@+id/tvImageLng"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="0sp" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/description"
        android:scaleType="center" />

    <ImageView
        android:id="@+id/ivPostLike"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="5dp"
        android:layout_gravity="end|bottom"
        android:src="@drawable/tool_like_false" />
</FrameLayout>